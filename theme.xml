<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>4</zIndex>	      
        <type>vertical</type>
        <pos>0.274 0</pos>
        <size>1 1</size>
        <logoScale>1.05</logoScale>
        <logoSize>0.32 0.32</logoSize>
        <color>00000000</color>
        <maxLogoCount>9</maxLogoCount>
		<logoAlignment>center</logoAlignment> 
         <zIndex>7</zIndex>			
      </carousel> 
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>                 
         <path>./_inc/images/main.png</path>
      </image> 	  
      <text name="systemInfo">     
         <pos>-0.3 0.909</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>bbdcf9</color>
         <fontPath>./_inc/fonts/mkmyth.ttf</fontPath>
	     <fontSize>0.04</fontSize>
         <zIndex>10</zIndex>	     
      </text>            
   </view>
</feature>


